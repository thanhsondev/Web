@model Nine.Models.Genre

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-primary" style="text-align:center"><a asp-action="Index"><i class="fa-solid fa-backward fa-beat fa-sm"></i></a> Edit Genre</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="GenreName" class="control-label" style="margin-top: 30px; font-size:20px"></label>
                <input asp-for="GenreName" class="form-control" />
                <span asp-validation-for="GenreName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-primary" style="margin-top: 20px;" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

