@model IEnumerable<ApplicationUser>


@{

}



<h1 class="text-primary" style="text-align:center;  margin:35px">Owner</h1>

<table class="table" style="text-align:center; font-size:20px">
	<thead>
		<tr>
			<th>
				ID
			</th>
			<th>
				User Name
			</th>
			<th>
				Email
			</th>

			<th>
				Address
			</th>
	
		</tr>
	</thead>
	<tbody>
		@foreach (var user in Model)
		{
			<tr>
				<td>@user.Id</td>
				<td>@user.FullName</td>
				<td>@user.Email</td>
				<td>@user.Address</td>



                <td>
                    <a class="btn btn-outline-info mdi mdi-pencil" asp-controller="Admin" asp-action="ChangeOwner" asp-route-id="@user.Id"><i class="fa-solid fa-bolt fa-xl"></i></a>
					<a class="btn btn-outline-warning mdi mdi-pencil" asp-controller="Admin" asp-action="ChangePasswordOwner" asp-route-id="@user.Id"><i class="fa-solid fa-key fa-xl"></i> Change Password</a>

                    <a class="btn btn-outline-danger mdi mdi-pencil" asp-controller="Admin" asp-action="DeleteOwner" asp-route-id="@user.Id"><i class="fa-solid fa-trash fa-xl"></i></a>
                </td>
			</tr>
		}
	</tbody>
</table>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}